@model Datos.Models.FacturacionModel
@{
    ViewBag.Title = "Ventas por Forma de Pago";
    Layout = null; //Layout = "~/Views/Shared/_LayoutTab.cshtml";
}
<div class="container-fluid animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <nav aria-label="breadcrumbs">
                <ol class="breadcrumbs">
                    <li class="breadcrumbs-item">@Html.ActionLink("Facturacion", "Index", "Facturacion")</li>
                    <li class="breadcrumbs-item">Reportes</li>
                    <li class="breadcrumbs-item">Informes Diarios</li>
                    <li class="breadcrumbs-item active">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
        <div class="col-sm-11">
            <h5> <b>@ViewBag.Title</b></h5>
        </div>
        
        <div class="col-sm-1">
            <a href="#" onclick="AjaxModalGet('Ayuda @ViewBag.Title - Inicio', '/Facturacion/Ayuda', 'RVFPIndex', 'm_ayudas')" class="icono_ayuda">
                <i class="fa fa-question-circle fa-2x"></i>
            </a>
        </div>
    </div>
    @using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "IndexForm" }))
    {
        <hr />
        <div class="row">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header text-danger font-weight-bold">Forma de Pago</div>
                    <div class="card-body">
                        <div class="row">
                            <input type="checkbox" id="p_0" />&nbsp;
                            <label> Todos </label>
                        </div>
                        <div class="row">
                            <input type="checkbox" id="p_1" />&nbsp;
                            <label> 01 - Contado </label>
                        </div>
                        <div class="row">
                            <input type="checkbox" id="p_2" />&nbsp;
                            <label> 02 - Cr&eacute;dito 07 D&iacute;as </label>
                        </div>
                        <div class="row">
                            <input type="checkbox" id="p_3" />&nbsp;
                            <label> 03 - Cr&eacute;dito 15 D&iacute;as </label>
                        </div>
                        <div class="row">
                            <input type="checkbox" id="p_4" />&nbsp;
                            <label> 04 - Cr&eacute;dito 30 D&iacute;as </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header text-danger font-weight-bold">Fecha</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Desde</label><br />
                                <input class="form-control datepickers" readonly />
                            </div>
                            <div class="col-sm-6">
                                <label>Hasta</label><br />
                                <input class="form-control datepickers" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <hr />
    <div class="col-sm-12">
        <a href="#" class="btn btn-primary">
            <i class='fa fa-print'></i>
            Imprimir
        </a>
    </div>
</div>
<script>
    $(".datepickers").datepicker({
        autoclose: true
    });

    $('.telefono').mask('(000) 000-0000', { placeholder: "(000) 000-0000" });

    $('input[type=radio]').iCheck({
        radioClass: 'iradio_square-blue',
    });

    $('input[type=checkbox]').iCheck({
        checkboxClass: 'icheckbox_square-blue',
    });

    $('#p_0').on('ifChecked', function (event) {
        activa(1);
    });

    $('#p_0').on('ifUnchecked', function (event) {
        //if ($("input#CreatePart").not(':checked')) {
        activa(0);
        //}
    });

    function activa(valor) {
        var i;
        if (valor == 1) {
            for (i = 1; i < 5; i++) {
                $("#p_" + i)[0].checked = true;
                $("#p_" + i).iCheck('update');
            };
        } else {
            for (i = 1; i < 5; i++) {
                $("#p_" + i)[0].checked = false;
                $("#p_" + i).iCheck('update');
            };
        }
    }
</script>
