@model Datos.Models.BancoModel

@{
    ViewBag.Title = "Reapertura de Mes Cerrado";
    Layout = null; //Layout = "~/Views/Shared/_LayoutTab.cshtml";
}

<div class="container-fluid animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <nav aria-label="breadcrumbs">
                <ol class="breadcrumbs">
                    <li class="breadcrumbs-item">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="breadcrumbs-item active">Procesos</li>
                    <li class="breadcrumbs-item active">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
        <div class="col-sm-11">
            <h5> <b>@ViewBag.Title</b></h5>
        </div>
        
        <div class="col-sm-1">
            <a href="#" onclick="AjaxModalGet('Ayuda @ViewBag.Title - Inicio', '/Banco/Ayuda', 'PRMCIndex', 'm_ayudas')" class="icono_ayuda">
                <i class="fa fa-question-circle fa-2x"></i>
            </a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <div class="card row">
                <div class="card-header text-danger font-weight-bold">Elija la cuenta Bancaria y el mes que desea aperturar</div>
                <div class="card-body row">
                    <div class="col-sm-8">
                        <label>Cuenta - Tipo de Cuenta - Banco</label>
                        <select class="form-control">
                            <option>48515455454 - Corriente - Banco A</option>
                            <option>24323123123 - Corriente - Banco B</option>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label>Mes</label>
                        <input class="form-control datepickers" readonly />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row col-sm-12">
        <a href="#" class="btn btn-success">
            <i class='fa fa-check'></i>
            Aceptar
        </a>
    </div>
</div>

