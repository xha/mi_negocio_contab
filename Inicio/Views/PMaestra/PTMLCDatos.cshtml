@model Datos.PlanillaModels.PMaestraModel

@using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "DatosForm" }))
{
    <div class="row">
        <div class="col-sm-3">
            <label>C&oacute;digo</label>
            @if (Model != null && !String.IsNullOrEmpty(Model.CODIGO))
            {
                @Html.TextBoxFor(m => m.CODIGO, new { @class = "form-control", @readonly = "true" })
            }
            else
            {
                @Html.TextBoxFor(m => m.CODIGO, new { @class = "form-control", @maxlength = "10", onkeypress = "solo_enteros(event)" })
            }
        </div>
        <div class="col-sm-6">
            <label>Descripci&oacute;n</label>
            @Html.TextBoxFor(m => m.DESCRIPCION, new { @class = "form-control", @maxlength = "60", onkeypress = "solo_alfanumericos(event)" })
        </div>
        <div class="col-sm-3">
            <label>Nivel</label>
            @Html.TextBoxFor(m => m.NIVEL, new { @class = "form-control", @maxlength = "10", onkeypress = "solo_enteros(event)" })
        </div>
        <div class="col-sm-3">
            <label>Escala Salarial S/:</label>
            @Html.TextBoxFor(m => m.ESCALA_MINIMA, new { @class = "form-control", @maxlength = "20", onkeypress = "solo_decimal(event,this)" })
        </div>
        <div class="col-sm-3">
            <label>&nbsp;</label>
            @Html.TextBoxFor(m => m.ESCALA_MAXIMA, new { @class = "form-control", @maxlength = "20", onkeypress = "solo_decimal(event,this)" })
        </div>
    </div>
}
<hr />
<div class="form-group row">
    <div class="col-sm-12">
        <a href="#" onclick="ocultar_panel('PTMLCIndex', 'Maestro')" class="btn btn-info">
            <i class='fa fa-arrow-left'></i>
            Regresar
        </a>
        <a href="#" class="btn btn-success">
            <i class='fa fa-save'></i>
            Guardar
        </a>
    </div>
</div>