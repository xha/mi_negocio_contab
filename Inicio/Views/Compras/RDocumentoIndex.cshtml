@model Datos.Models.ComprasModel

@{
    ViewBag.Title = "Compras por Documento";
    Layout = null; //Layout = "~/Views/Shared/_LayoutTab.cshtml";
}

<div class="container-fluid animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <nav aria-label="breadcrumbs">
                <ol class="breadcrumbs">
                    <li class="breadcrumbs-item">@Html.ActionLink("Compras", "Index", "Compras")</li>
                    <li class="breadcrumbs-item">Reportes</li>
                    <li class="breadcrumbs-item active">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
        <div class="col-sm-11">
            <h5> <b>@ViewBag.Title</b></h5>
        </div>
        
        <div class="col-sm-1">
            <a href="#" onclick="AjaxModalGet('Ayuda @ViewBag.Title - Inicio', '/Compras/Ayuda', 'RDocumentoIndex', 'm_ayudas')" class="icono_ayuda">
                <i class="fa fa-question-circle fa-2x"></i>
            </a>
        </div>
    </div>
    @using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "IndexForm" }))
    {
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-header text-danger font-weight-bold">Documento</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12" align="center">
                                <label>Todos </label>
                                <input type="checkbox" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <label>Tipo de Documento</label><br />
                                <select class="form-control">
                                    <option value="">Seleccione</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <br />
                                <input class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-header text-danger font-weight-bold">Moneda</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <select class="form-control">
                                    <option value="">Seleccione</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <br />
                                <input class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-header text-danger font-weight-bold">Fecha</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Desde</label><br />
                                <input class="form-control datepickers" readonly />
                            </div>
                            <div class="col-sm-6">
                                <label>Hasta</label><br />
                                <input class="form-control datepickers" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-header text-danger font-weight-bold">Opciones</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <input name="opt" type="radio" />
                                <label>Reporte Resumido</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <input name="opt" type="radio" />
                                <label>Reporte Detallado</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="col-sm-12">
            <a href="#" class="btn btn-primary">
                <i class='fa fa-print'></i>
                Imprimir
            </a>
        </div>
    }
</div>
<script>
    $(".datepickers").datepicker({
        autoclose: true
    });

    $('.telefono').mask('(000) 000-0000', { placeholder: "(000) 000-0000" });

    $('input[type=radio]').iCheck({
        radioClass: 'iradio_square-blue',
    });

    $('input[type=checkbox]').iCheck({
        checkboxClass: 'icheckbox_square-blue',
    });
</script>