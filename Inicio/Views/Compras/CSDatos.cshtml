@model Datos.Models.ComprasModel

@using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "DatosForm" }))
{
    @Html.HiddenFor(m => m.Codigo)
    <div class="row">
        <div class="col-sm-2">
            <label>Proveedor</label>
            @Html.TextBoxFor(m => m.CodigoProveedor, new { @class = "form-control alert-warning", @maxlength = "11", onkeypress = "solo_enteros(event)", ondblclick = "AjaxModalGet('Listado de Proveedores', '/Proveedor/Proveedores', 'nada2', 'm_middle')" })
        </div>
        <div class="col-sm-3">
            <label>Descripci&oacute;n</label>
            <input type="text" readonly class="form-control" id="descripcion_proveedor" />
        </div>
        <div class="col-sm-2">
            <label>R.U.C.</label>
            <input type="text" readonly class="form-control" id="ruc_proveedor" />
        </div>
        <div class="col-sm-3">
            <label>Mes-Per&iacute;odo Contabilizaci&oacute;n</label>
            @Html.DropDownListFor(m => m.MesPeriodo, new List<SelectListItem>
            {
                new SelectListItem{ Text="02-2019", Value = "02-2019" },
                new SelectListItem{ Text="03-2019", Value = "03-2019" },
            }, new { @class = "form-control w-75" })
        </div>
        <div class="col-sm-2" align="center">
            <br />
            @Html.CheckBoxFor(m => m.EnviarCXP)&nbsp;
            <label>Enviar a Cuentas por Pagar </label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <label>Documento</label>
            <div class="row">
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.TipoDocumento, new { @class = "form-control alert-warning", @maxlength = "3", onkeypress = "solo_alfanumericos(event)", ondblclick = "AjaxModalGet('Tipo de Documento', '/Utilitarios/TipoDocumento', 'nada2', 'm_middle')" })
                </div>
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.Documento, new { @class = "form-control", @maxlength = "25", onkeypress = "solo_alfanumericos(event)" })
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Documento2, new { @class = "form-control", @maxlength = "25", onkeypress = "solo_alfanumericos(event)" })
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <label>Emisi&oacute;n</label>
            @Html.TextBoxFor(m => m.FechaEmision, new { @class = "form-control datepickers", @readonly = "true" })
        </div>
        <div class="col-sm-1">
            <label>D&iacute;as</label>
            @Html.TextBoxFor(m => m.Dias, new { @class = "form-control", @maxlength = "5", onkeypress = "solo_enteros(event)" })
        </div>
        <div class="col-sm-2">
            <label>Vencimiento</label>
            @Html.TextBoxFor(m => m.FechaVencimiento, new { @class = "form-control datepickers", @readonly = "true" })
        </div>
        <div class="col-sm-2">
            <label>Moneda</label>
            @Html.DropDownListFor(m => m.Moneda, new List<SelectListItem>
            {
                new SelectListItem{ Text="Moneda Nacional", Value = "MN" },
                new SelectListItem{ Text="Moneda Extranjera", Value = "ME" },
            }, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>P. Venta</label>
            @Html.TextBoxFor(m => m.PrecioVenta, new { @class = "form-control", @maxlength = "11", onkeypress = "solo_decimal(event, this)" })
        </div>
        <div class="col-sm-2">
            <label>Monto IGV</label>
            @Html.TextBoxFor(m => m.ImporteIGV, new { @class = "form-control", @maxlength = "11", onkeypress = "solo_decimal(event, this)" })
        </div>
            
        <div class="col-sm-2">
            <label>Afecto</label>
            @Html.TextBoxFor(m => m.Afecto, new { @class = "form-control", @maxlength = "11", onkeypress = "solo_decimal(event, this)" })
        </div>
        <div class="col-sm-2">
            <label>Inafecto</label>
            @Html.TextBoxFor(m => m.Inafecto, new { @class = "form-control", @maxlength = "11", onkeypress = "solo_decimal(event, this)" })
        </div>
        <div class="col-sm-2">
            <label>I.G.V.</label>
            @Html.TextBoxFor(m => m.IGV, new { @class = "form-control", @maxlength = "11", onkeypress = "solo_decimal(event, this)" })
        </div>
        <div class="col-sm-2">
            <label>V. Venta</label>
            @Html.TextBoxFor(m => m.ValorVenta, new { @class = "form-control", @maxlength = "11", onkeypress = "solo_decimal(event, this)" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <label>Glosa:</label>
            @Html.TextBoxFor(m => m.Glosa, new { @class = "form-control", @maxlength = "60", onkeypress = "solo_alfanumericos(event)" })
        </div>
    </div>
}
<hr />
<div class="form-group row">
    <div class="col-sm-12">
        <a href="#" onclick='ocultar_panel("CSIndex", "Compras")' class="btn btn-info">
            <i class='fa fa-arrow-left'></i>
            Regresar
        </a>
        <button class="btn btn-success" onclick="AjaxModalGet('Mantenimiento de Detalle de Compra', '/Compras/CCAgregar');">
            <i class='fa fa-save'></i>
            Guardar
        </button>
    </div>
</div>