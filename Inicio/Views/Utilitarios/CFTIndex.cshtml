@{
    ViewBag.Title = "Cambiar Fecha de Trabajo";
    Layout = null; //Layout = "~/Views/Shared/_LayoutTab.cshtml";
}

<div class="container-fluid animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <nav aria-label="breadcrumbs">
                <ol class="breadcrumbs">
                    <li class="breadcrumbs-item">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="breadcrumbs-item active">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
        <div class="col-sm-11">
            <h5> <b>@ViewBag.Title</b></h5>
        </div>
        
        <div class="col-sm-1">
            <a href="#" onclick="AjaxModalGet('Ayuda Utilitarios - Inicio', '/Utilitarios/Ayuda', 'CFTIndex', 'm_ayudas')" class="icono_ayuda">
                <i class="fa fa-question-circle fa-2x"></i>
            </a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header text-danger font-weight-bold">Fecha</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <label>Fecha Actual</label>
                            <input class="form-control datepickers" readonly />
                        </div>
                        <div class="col-sm-3">
                            <label>Fecha de trabajo</label>
                            <input class="form-control datepickers" readonly />
                        </div>
                        <div class="col-sm-3">
                            <label>T/C Compra</label>
                            <input class="form-control" readonly />
                        </div>
                        <div class="col-sm-3">
                            <label>T/C Venta</label>
                            <input class="form-control" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-12">
            <button class="btn btn-success">
                <i class='fa fa-save'></i>
                Guardar
            </button>
        </div>
    </div>
</div>

