@model Datos.Models.CajaModel

@using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "DatosForm" }))
{
    <div class="row">
        <div class="col-sm-3">
            <label>Tipo de Movimiento</label>
            <select class="form-control">
                <option>Ingreso</option>
                <option>Egreso</option>
            </select>
        </div>
        <div class="col-sm-3">
            <label>N&uacute;mero</label>
            @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control", @maxlength = "20", onkeypress = "solo_enteros(event)" })
        </div>
        <div class="col-sm-6">
            <label>Transacci&oacute;n</label>
            <div class="row">
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.CodigoTransaccion, new { @class = "form-control alert-warning", @maxlength = "3", onkeypress = "solo_enteros(event)", ondblclick = "AjaxModalGet('Transacciones de Caja', '/Caja/Transacciones', 'nada2', 'm_middle')" })
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.DescripcionTransaccion, new { @class = "form-control", @readonly = "true" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>Monto</label>
            @Html.TextBoxFor(m => m.Monto, new { @class = "form-control", @maxlength = "20", onkeypress = "solo_decimal(event,this)" })
        </div>
        <div class="col-sm-2">
            <label>Moneda</label>
            @Html.DropDownListFor(m => m.Moneda, new List<SelectListItem>
            {
                new SelectListItem{ Text="Moneda Nacional", Value = "MN" },
                new SelectListItem{ Text="Moneda Extranjera", Value = "ME" },
            }, new { @class = "form-control" }) 
        </div>
        <div class="col-sm-2">
            <label>Tipo Cambio</label>
            @Html.TextBoxFor(m => m.TipoCambio, new { @class = "form-control", @readonly = true })
        </div>
        <div class="col-sm-6">
            <br />
            <div class="row">
                <div class="col-sm-4">
                    <input type="radio" />&nbsp; Efectivo
                </div>
                <div class="col-sm-4">
                    <input type="radio" />&nbsp; Cheque
                </div>
                <div class="col-sm-4">
                    <input type="radio" />&nbsp; Tarjeta
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>Tipo de Tarjeta</label>
            <input class="form-control" readonly />
        </div>
        <div class="col-sm-3">
            <label>Nro. de tarjeta</label>
            <input class="form-control" readonly />
        </div>
        <div class="col-sm-7">
            <label>Glosa</label>
            @Html.TextBoxFor(m => m.Glosa, new { @class = "form-control", @maxlength = "60", onkeypress = "solo_alfanumericos(event)" })
        </div>
    </div>
}
<hr />
<div class="row">
    <div class="col-sm-12">
        <a href="#" onclick="ocultar_panel('TMESIndex', 'Caja')" class="btn btn-info">
            <i class='fa fa-arrow-left'></i>
            Regresar
        </a>
        <button class="btn btn-success">
            <i class='fa fa-save'></i>
            Guardar
        </button>
    </div>
</div>