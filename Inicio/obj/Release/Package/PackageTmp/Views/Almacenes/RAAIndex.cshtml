@model Datos.Models.AlmacenesModel

@{
    ViewBag.Title = "";
    Layout = null; //Layout = "~/Views/Shared/_LayoutTab.cshtml";
}

<div class="container-fluid animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <nav aria-label="breadcrumbs">
                <ol class="breadcrumbs">
                    <li class="breadcrumbs-item">@Html.ActionLink("Almacenes", "Index", "Almacenes")</li>
                    <li class="breadcrumbs-item">Reportes</li>
                    <li class="breadcrumbs-item active">Reporte de Art&iacute;culos en alerta log&iacute;stica</li>
                </ol>
            </nav>
        </div>
        <div class="col-sm-11">
            <h5> <b>Reporte de Art&iacute;culos en alerta log&iacute;stica</b></h5>
        </div>
        
        <div class="col-sm-1">
            <a href="#" onclick="AjaxModalGet('Ayuda Reporte de Articulos en alerta logistica - Inicio', '/Almacenes/Ayuda', 'RAAIndex', 'm_ayudas')" class="icono_ayuda">
                <i class="fa fa-question-circle fa-2x"></i>
