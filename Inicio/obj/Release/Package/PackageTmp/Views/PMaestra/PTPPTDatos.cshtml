@model Datos.PlanillaModels.PMaestraModel

<div class="card">
    <div class="card-header text-danger">Datos B&aacute;sicos</div>
    <div class="row card-body">
        <div class="col-sm-9">
            <div class="row">
                <div class="col-sm-3 pt-1">
                    <label>C&oacute;digo</label>
                    <input class="form-control" readonly />
                </div>
                <div class="col-sm-3 pt-1">
                    <label>C&oacute;digo Alt.</label>
                    <input class="form-control" />
                </div>
                <div class="col-sm-6"></div>
                <div class="col-sm-4">
                    <label>Apellido Paterno</label>
                    <input class="form-control" />
                </div>
                <div class="col-sm-4">
                    <label>Apellido Materno</label>
                    <input class="form-control" />
                </div>
                <div class="col-sm-4">
                    <label>Nombres</label>
                    <input class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-sm-3 pt-1">
            <div class="row">
                <div class="col-sm-8">
                    <img src="@Url.Content("~/Content/images/no-avatar.png")" width="100%" />
                    <div class="row pt-1">
                        <button class="btn btn-primary ml-2">
                            <i class="fa fa-plus"></i>
                        </button>
                        <button class="btn btn-danger ml-2">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<h4 class="mt-1">Datos del Trabajador</h4>
<div class="row">
    <div class="col-sm-3 pt-1">
        <label>Tipo de Doc.</label>
        <input class="form-control alert-warning" ondblclick="AjaxModalGet('Referencias', '/PMaestra/Referencias', 'nada2', 'm_middle')" />
    </div>
    <div class="col-sm-3 pt-1">
        <label>Nro. Documento</label>
        <input class="form-control" />
    </div>
    <div class="col-sm-3 pt-1">
        <label>Fecha Nac.</label>
        <input class="form-control datepickers" readonly />
    </div>
    <div class="col-sm-3 pt-1">
        <label>Sexo</label>
        <select class="form-control">
            <option>Femenino</option>
            <option>Masculino</option>
        </select>
    </div>
    <div class="col-sm-3 pt-1">
        <label>Nacionalidad</label>
        <select class="form-control">
            <option>Per&uacute;</option>
        </select>
    </div>
    <div class="col-sm-3 pt-1">
        <label>Tel&eacute;fono</label>
        <input class="form-control" />
    </div> 
    <div class="col-sm-3 pt-1">
        <label>Correo Electr&oacute;ncio</label>
        <input class="form-control" />
    </div>    
</div>
<div class="card row mt-1">
    <div class="card-header text-danger">
        P.S. Personal de Terceros
    </div>
    <div class="row card-body">
        <div class="col-sm-3 pt-1">
            <label>R.U.C. Empleador</label>
            <input class="form-control" />
        </div>
        <div class="col-sm-3 pt-1">
            <label>SCTR Salud</label>
            <input class="form-control" />
        </div>
        <div class="col-sm-3 pt-1">
            <label>SCTR Pensi&oacute;n</label>
            <select class="form-control">
            </select>
        </div>
    </div>
</div>
<hr />
<div class="form-group row">
    <div class="col-sm-12">
        <a href="#" onclick="ocultar_panel('PTPPTIndex', 'Maestro')" class="btn btn-info">
            <i class='fa fa-arrow-left'></i>
            Regresar
        </a>
        <a href="#" class="btn btn-success">
            <i class='fa fa-save'></i>
            Guardar
        </a>
        <a href="#" class="btn btn-secondary">
            <i class='fa fa-print'></i>
            Ficha Datos Infor.
        </a>
    </div>
</div>
<script>
    $(".datepickers").datepicker({
        autoclose: true
    });

    $('input[type=radio]').iCheck({
        radioClass: 'iradio_square-blue',
    });

    $('input[type=checkbox]').iCheck({
        checkboxClass: 'icheckbox_square-blue',
    });
</script>