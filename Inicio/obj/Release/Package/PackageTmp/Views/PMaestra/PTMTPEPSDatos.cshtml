@model Datos.PlanillaModels.PMaestraModel

@using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "DatosForm" }))
{
    <div class="row">
        <div class="col-sm-3">
            <label>RUC EPS</label>
            @if (Model != null && !String.IsNullOrEmpty(Model.CODIGO))
            {
                @Html.TextBoxFor(m => m.CODIGO, new { @class = "form-control", @readonly = "true" })
            }
            else
            {
                @Html.TextBoxFor(m => m.CODIGO, new { @class = "form-control alert-warning", @maxlength = "10", onkeypress = "solo_enteros(event)", ondblclick = "AjaxModalGet('Listado de Referencias', '/PMaestra/Referencias', 'nada2', 'm_middle')" })
            }
        </div>
        <div class="col-sm-3">
            <label>Cod. Plan EPS</label>
            <input class="form-control" />
        </div>
        <div class="col-sm-6">
            <label>Descripci&oacute;n Plan</label>
            @Html.TextBoxFor(m => m.DESCRIPCION, new { @class = "form-control", @maxlength = "60", onkeypress = "solo_alfanumericos(event)" })
        </div>
        <div class="col-sm-4">
            <label>Num. Trabajadores Afiliados</label>
            <input class="form-control w-50" onkeypress="solo_enteros(event)" />
        </div>
        <div class="col-sm-4">
            <label>Costo Fijo en Soles (Incluyendo IGV)</label>
            <input class="form-control w-50" onkeypress="solo_decimal(event,this)" />
        </div>
    </div>
}
<hr />
<div class="form-group row">
    <div class="col-sm-12">
        <a href="#" onclick="ocultar_panel('PTMTPEPSIndex', 'Maestro')" class="btn btn-info">
            <i class='fa fa-arrow-left'></i>
            Regresar
        </a>
        <a href="#" class="btn btn-success">
            <i class='fa fa-save'></i>
            Guardar
        </a>
    </div>
</div>