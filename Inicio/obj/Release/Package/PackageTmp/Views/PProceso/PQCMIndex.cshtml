@model Datos.PlanillaModels.PMaestraModel

@{
    ViewBag.Title = "Mantenimiento de 5ta Cat. Manual";
    Layout = null; //Layout = "~/Views/Shared/_LayoutTab.cshtml";
}

<div class="container-fluid animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <nav aria-label="breadcrumbs">
                <ol class="breadcrumbs">
                    <li class="breadcrumbs-item">@Html.ActionLink("Planilla", "Index", "Planilla")</li>
                    <li class="breadcrumbs-item">Procesos</li>
                    <li class="breadcrumbs-item">Quinta Categor&iacute;a</li>
                    <li class="breadcrumbs-item active">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
        <div class="col-sm-11">
            <h5><b>@ViewBag.Title</b></h5>
        </div>

        <div class="col-sm-1">
            <a href="#" onclick="AjaxModalGet('Ayuda @ViewBag.Title', '/PProceso/Ayuda', 'PQCMIndex', 'm_ayudas')" class="icono_ayuda">
                <i class="fa fa-question-circle fa-2x"></i>
            </a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header text-danger">
                    Datos
                </div>
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-sm-6">
                            <label>Trabajador</label>
                            <input class="form-control" onclick="AjaxModalGet('Referencias', '/PMaestra/Referencias', '', 'm_middle')" />
                        </div>
                        <div class="col-sm-6">
                            <label>Nombre</label>
                            <input class="form-control" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header text-danger">
                    Seleccionar Proceso
                </div>
                <div class="card-body text-center">
                    <br />
                    <button class="btn btn-primary m-1">
                        Mensual
                    </button>
                    <button class="btn btn-secondary m-1">
                        Semanal
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow mt-1">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped pre-scrollable datatables" id="PAAQIndexGrid" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Mes</th>
                            <th>Rem. Const.</th>
                            <th>Rem. Proyectable</th>
                            <th>Total Ingreso Var.</th>
                            <th>Gratificaci&oacute;n</th>
                            <th>Prom. Rem. Var. Proy.</th>
                            <th>Remun Externo</th>
                            <th>Remun. Anteriores</th>
                            <th>Proy. Fin Año</th>
                            <th>Renta Afecta</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-sm-6"></div>
        <div class="col-sm-3">
            <label>Meses Afectados al c&aacute;lculo</label>
            <input class="form-control w-75" readonly />
        </div>
        <div class="col-sm-3">
            <label>Total Monto Retenido</label>
            <input class="form-control w-75" readonly />
        </div>
    </div>
    <hr />
    <div class="row col-sm-12">
        <a href="#" class="btn btn-primary mx-2" onclick="AjaxModalGet('Selector de Trabajadores', '/PProceso/SelectorTrabajadores', '', 'm_central')">
            <i class="fa fa-cog"></i>
            Procesar Quinta Manual
        </a>
        <a href="#" class="btn btn-secondary mx-2">
            <i class='fa fa-file'></i>
            Hoja de Trabajo de 5ta. Catego&iacute;a
        </a>
    </div>
</div>

<script>
    $(".datepickers").datepicker({
        autoclose: true
    });

    $('input[type=radio]').iCheck({
        radioClass: 'iradio_square-blue',
    });

    $('input[type=checkbox]').iCheck({
        checkboxClass: 'icheckbox_square-blue',
    });
</script>
