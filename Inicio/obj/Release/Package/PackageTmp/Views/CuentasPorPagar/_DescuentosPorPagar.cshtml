@model Datos.Models.CuentasPorPagarModel
<div class="container-fluid">
@using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "DatosForm" }))
{
    @Html.HiddenFor(m => m.Codigo)
    <div class="row">
        <div class="col-sm-6">
            <label>Doc</label>
            <div class="row">
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.TipoDocumento, new { @class = "form-control alert-warning", @maxlength = "3", onkeypress = "solo_alfanumericos(event)", ondblclick = "AjaxModalGet('Documento', '/Utilitarios/TipoDocumento', 'nada2', 'm_middle')" })
                </div>
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.Documento, new { @class = "form-control", @maxlength = "20", onkeypress = "solo_enteros(event)" })
                </div>
                <div class="col-sm-6">
                    <input class="form-control" readonly id="descripcion_documento" />
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <label>Fecha</label>
            @Html.TextBoxFor(m => m.FechaEmision, new { @class = "form-control datepickers", @readonly = "true" })
        </div>
        <div class="col-sm-2">
            <label>D&iacute;as</label>
            @Html.TextBoxFor(m => m.Dias, new { @class = "form-control", @maxlength = "5", onkeypress = "solo_enteros(event)" })
        </div>
        <div class="col-sm-2">
            <label>Vence</label>
            @Html.TextBoxFor(m => m.FechaVencimiento, new { @class = "form-control datepickers", @readonly = "true" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label>Importe</label>
            @Html.TextBoxFor(m => m.ImporteBruto, new { @class = "form-control", @maxlength = "20", onkeypress = "solo_decimal(event,this)" })
        </div>
        <div class="col-sm-3">
            <label>Moneda</label>
            @Html.DropDownListFor(m => m.Moneda, new List<SelectListItem>
            {
                new SelectListItem{ Text="Moneda Nacional", Value = "MN" },
                new SelectListItem{ Text="Moneda Extranjera", Value = "ME" },
            }, new { @class = "form-control" })
        </div>
        <div class="col-sm-3">
            <label>TC</label>
            @Html.TextBoxFor(m => m.TotalCredito, new { @class = "form-control", @readonly = true })
        </div>
    </div>
    <div class="row col-sm-12">
        <label>Glosa</label>
        @Html.TextBoxFor(m => m.Glosa, new { @class = "form-control", @maxlength = "60", onkeypress = "solo_alfanumericos(event)" })
    </div>
}
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <a href="#" class="btn btn-info" onclick="$('#m_central').modal('hide')">
                <i class='fa fa-arrow-left'></i>
                Regresar
            </a>
            <a href="#" class="btn btn-success">
                <i class='fa fa-save'></i>
                Aceptar
            </a>
        </div>
    </div>
</div>
<script>
    $(".datepickers").datepicker({
        autoclose: true
    });
</script>