@model Datos.Models.ArticuloModel
<div class="container-fluid">
    @using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "DatosForm" }))
    {
        @Html.HiddenFor(m => m.Codigo)
        <div class="row">
            <div class="col-sm-4">
                <label>Codigo del Precio</label>
                @Html.TextBoxFor(m => m.CodigoTipoPrecio, new { @class = "form-control alert-warning", @maxlength = "2", onkeypress = "solo_enteros(event)", ondblclick = "AjaxModalGet('Tipos de Precio', '/Utilitarios/TipoPrecio', 'nada2', 'm_normal')" })
            </div>
            <div class="col-sm-4">
                <label>Precio Minimo</label>
                @Html.TextBoxFor(m => m.PrecioMinimo, new { @class = "form-control", @maxlength = "10", @onkeypress = "solo_decimal(event, this)" })
            </div>
            <div class="col-sm-4">
                <label>% Ganancia</label>
                @Html.TextBoxFor(m => m.Ganancia, new { @class = "form-control", @maxlength = "10", @onkeypress = "solo_decimal(event, this)" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <label>Precio Con I.G.V.</label>
                @Html.TextBoxFor(m => m.PrecioConIGV, new { @class = "form-control", @maxlength = "10", @onkeypress = "solo_decimal(event, this)" })
            </div>
            <div class="col-sm-4">
                <label>Precio Sin I.G.V.</label>
                @Html.TextBoxFor(m => m.PrecioSinIGV, new { @class = "form-control", @maxlength = "10", @onkeypress = "solo_decimal(event, this)" })
            </div>
            <div class="col-sm-4">
                <label>Cantidad Minima de Venta</label>
                @Html.TextBoxFor(m => m.CantidadMinima, new { @class = "form-control w-75", @maxlength = "10", @onkeypress = "solo_decimal(event, this)" })
                <label style="font-size: 10px; color: brown">* Opcional para punto de venta</label>
            </div>
        </div>
    }
    <br />
    <div class="col-sm-12">
        <button class="btn btn-info" onclick="nada2()">
            <i class='fa fa-arrow-left'></i>
            Regresar
        </button>
        <button class="btn btn-success">
            <i class='fa fa-save'></i>
            Guardar
        </button>
    </div>
</div>


